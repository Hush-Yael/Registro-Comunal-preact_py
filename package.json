{
  "name": "registro-comunal",
  "version": "0.1.0",
  "scripts": {
    "build-frontend": "cd frontend && node --run build",
    "build": "node --run clean && node --run build-frontend && .\\backend\\.venv\\Scripts\\pyinstaller build-windows.spec",
    "clean": "if exist dist rd /S /Q dist & if exist build rd /S /Q build & if exist gui rd /S /Q gui",
    "dev": "concurrently --kill-others \"node --run dev-frontend\" \"node --run dev-backend\"",
    "dev-frontend": "cd frontend && node --run dev",
    "dev-backend": ".\\backend\\.venv\\Scripts\\python backend\\app.py -D",
    "dev-webview": "concurrently --kill-others \"node --run dev-frontend\" \"node --run open-webview-window\"",
    "open-webview-window": ".\\backend\\.venv\\Scripts\\python backend\\app.py -P -D",
    "init-frontend": "cd frontend && pnpm install",
    "init-backend": "cd backend && python -m venv .venv && .\\.venv\\Scripts\\pip install -r .\\requerimientos.txt",
    "preview": "node --run build-frontend && .\\backend\\.venv\\Scripts\\python backend\\app.py -P"
  },
  "packageManager": "pnpm@10.6.4",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
